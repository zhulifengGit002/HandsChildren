/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background: #fff;
  letter-spacing:2rpx;
}
/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.singleDialog {
  width: 100%;
  flex-direction: column;
}
.message-list{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  padding: 5rpx 0;
  position: relative;
}
.message-list .list-image{
  width: 15%;
  text-align: center;
}
.message-list image{
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.message-list .list-cont{
  display: flex;
  flex-direction: column;
  width: 85%;
  text-align:left;
  border-bottom: 1px solid #efefef;
  padding: 10rpx 0;
  overflow: hidden;
}
.message-list .list-cont .name{
  width: 100%;
  font-size: 12px;
  color: #333;
  line-height: 20px;
}
.message-list .list-cont .cont{
  width: 100%;
  font-size: 10px;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.message-list .list-messageTs{
  position: absolute;
  right: 20px;
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: red;
  color: #fff;
  font-size: 10px;
  text-align: center;
  line-height: 15px;
}